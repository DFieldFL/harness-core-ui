{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "connector": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        },
        "orgIdentifier": {
          "type": "string"
        },
        "projectIdentifier": {
          "type": "string"
        },
        "type": {
          "enum": ["K8sCluster", "Vault"]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "K8sCluster"
              }
            }
          },
          "then": {
            "properties": {
              "spec": {
                "type": "object",
                "properties": {
                  "credentials": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "enum": ["InheritFromDelegate", "ManualConfig"]
                      }
                    },
                    "allOf": [
                      {
                        "if": {
                          "properties": {
                            "type": {
                              "const": "InheritFromDelegate"
                            }
                          }
                        },
                        "then": {
                          "properties": {
                            "spec": {
                              "properties": {
                                "delegateName": {
                                  "type": "string"
                                }
                              },
                              "required": ["delegateName"],
                              "additionalProperties": false
                            }
                          }
                        }
                      },
                      {
                        "if": {
                          "properties": {
                            "type": {
                              "const": "ManualConfig"
                            }
                          }
                        },
                        "then": {
                          "properties": {
                            "spec": {
                              "type": "object",
                              "properties": {
                                "masterUrl": {
                                  "type": "string"
                                },
                                "auth": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "enum": ["UserPassword", "ClientKeyCert", "ServiceAccount", "OpenIdConnect"]
                                    }
                                  },

                                  "allOf": [
                                    {
                                      "if": {
                                        "properties": {
                                          "type": {
                                            "const": "UserPassword"
                                          }
                                        }
                                      },
                                      "then": {
                                        "properties": {
                                          "spec": {
                                            "type": "object",
                                            "properties": {
                                              "username": {
                                                "type": "string"
                                              },
                                              "password": {
                                                "type": "string"
                                              },
                                              "cacert": {
                                                "type": "string"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    },
                                    {
                                      "if": {
                                        "properties": {
                                          "type": {
                                            "const": "ClientKeyCert"
                                          }
                                        }
                                      },
                                      "then": {
                                        "properties": {
                                          "spec": {
                                            "type": "object",
                                            "properties": {
                                              "client-cert": {
                                                "type": "string"
                                              },
                                              "client-key": {
                                                "type": "string"
                                              },
                                              "client-key-passphrase": {
                                                "type": "string"
                                              },
                                              "clientKeyAlgo": {
                                                "type": "string"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    },
                                    {
                                      "if": {
                                        "properties": {
                                          "type": {
                                            "const": "ServiceAccount"
                                          }
                                        }
                                      },
                                      "then": {
                                        "properties": {
                                          "spec": {
                                            "type": "object",
                                            "properties": {
                                              "service-acccount-token": {
                                                "type": "string"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    },
                                    {
                                      "if": {
                                        "properties": {
                                          "type": {
                                            "const": "OpenIdConnect"
                                          }
                                        }
                                      },
                                      "then": {
                                        "properties": {
                                          "spec": {
                                            "type": "object",
                                            "properties": {
                                              "oidc-issuer-url": {
                                                "type": "string"
                                              },
                                              "oidc-client-id": {
                                                "type": "string"
                                              },
                                              "oidc-username": {
                                                "type": "string"
                                              },
                                              "oidc-password": {
                                                "type": "string"
                                              },
                                              "oidc-secret": {
                                                "type": "string"
                                              },
                                              "oidc-scopes": {
                                                "type": "string"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    }
                                  ]
                                }
                              },
                              "additionalProperties": false
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      ],
      "required": ["name", "identifier", "type", "spec"],
      "additionalProperties": true
    }
  }
}
